<Window x:Class="Opakovani_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBoxUzivatele" HorizontalAlignment="Center" Height="228" VerticalAlignment="Center" Width="352" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="Uživatelé" HorizontalAlignment="Left" Margin="342,62,0,0" VerticalAlignment="Top" Height="36" Width="178" FontSize="24" IsEnabled="False" FontWeight="Bold" Background="White" Foreground="Black"/>
        <Button x:Name="btnShowAll" Content="Vše" HorizontalAlignment="Left" Height="36" Margin="34,69,0,0" VerticalAlignment="Top" Width="95" Click="btnShowAll_Click"/>
        <Button x:Name="btnShowAdmin" Content="Admin" HorizontalAlignment="Left" Height="36" Margin="34,110,0,0" VerticalAlignment="Top" Width="95" Click="btnShowAdmin_Click"/>
        <Button x:Name="btnShowEditor" Content="Editor" HorizontalAlignment="Left" Height="36" Margin="34,151,0,0" VerticalAlignment="Top" Width="95" Click="btnShowEditor_Click"/>
        <Button x:Name="btnShowCustomer" Content="Customer" HorizontalAlignment="Left" Height="36" Margin="34,192,0,0" VerticalAlignment="Top" Width="95" Click="btnShowCustomer_Click"/>
        <Button x:Name="btnDeleteUser" Content="Smazat" HorizontalAlignment="Left" Height="41" Margin="224,336,0,0" VerticalAlignment="Top" Width="92" Click="btnDeleteUser_Click"/>
        <Button x:Name="btnAddUser" Content="Přidat" HorizontalAlignment="Center" Height="41" Margin="0,336,0,0" VerticalAlignment="Top" Width="92" Click="btnAddUser_Click"/>
        <Button x:Name="btnUserSave" Content="Uložit" HorizontalAlignment="Left" Height="41" Margin="484,336,0,0" VerticalAlignment="Top" Width="92" Click="btnUserSave_Click"/>

    </Grid>
</Window>